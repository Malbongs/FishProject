  <!-- script -->
  <script>
    AOS.init();

    var commentCnt = 3;

    // 채팅 입력 기능
    $(".submitBtn").click(function() {
      const bg_value = document.getElementById("chatBg")[0].value;
      const text_value = document.getElementById("text").value;
      const name_value = document.getElementById("nickName").value;

      // 입력값 유효성 체크
      if (name_value == "") {
        alert("닉네임을 입력해주세요.");
        return 0;
      } else if (text_value == "") {
        alert("내용을 입력해주세요.");
        return 0;
      }

      // 빈 채팅 폼 생성
      const box = document.getElementsByClassName("chatForm")[0];
      const comment = document.createElement("div");
      const userName = document.createElement("div");
      const text = document.createElement("div");
      const bg = document.createElement("div");

      // 채팅 수 카운트 증가
      commentCnt += 1;
      document.getElementsByClassName("commentCnt")[0].innerText = commentCnt;
      document.getElementsByClassName("commentCnt")[1].innerText = commentCnt;

      // 그리드 스타일 추가
      comment.className += 'chatLine';
      userName.className += 'chatUser';
      text.className += 'chatText';
      bg.className += 'chatBg';

      // input 폼 초기화
      document.getElementById("text").value = "";

      // 가져온 input 값 빈 댓글 폼에 집어넣기
      userName.innerText = name_value;
      text.innerText = text_value;
      bg.innerText = bg_value;

      // 채팅 폼 합치기
      comment.appendChild(bg);
      comment.appendChild(userName);
      comment.appendChild(text);

      // 합친 채팅 폼 실제 채팅창에 추가
      box.appendChild(comment);
    });

    // 페이지 맨위로 올라가기
    $(".upImg").click(function(e) {
      e.preventDefault();

      $('html,body').animate({
        scrollTop: 0
      }, 10);

      $(".upImg").animate({
        'margin-bottom': '20px'
      }, 400);
      $(".upImg").animate({
        'margin-bottom': '0px'
      }, 400);
    });
  </script>
